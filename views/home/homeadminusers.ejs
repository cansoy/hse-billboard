<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Kullanıclar</title>
</head>
<body class="bg-danger bg-opacity-10">

    <div class="m-2 p-2 navigation">
        <ul class="nav h4 pb-2 mb-4 text-danger border-bottom border-danger">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/home">
                    <button type="button" class="btn btn-info">Ana Sayfaya Dön</button>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/home/logout">
                    <button type="button" class="btn btn-danger">Çıkış Yap</button>
                </a>
            </li>
          </ul>
    </div>

    <div class="m-2 p-2 confirm-load d-flex flex-row flex-wrap justify-content-around">
        <div class="m-2 p-2 my-confirm-table flex-1">
            <% if (locals.flashConnectionerror) { %>
                <p class="fs-6 text-danger"><%= flashConnectionerror %> </p>
            <% } %>
            <table class="table">
                <thead>
                  <tr class="table-danger">
                    <th scope="col">No</th>
                    <th scope="col">Kullanıcı İsmi</th>
                    <th scope="col">Şifresi</th>
                    <th scope="col">Rölü</th>
                    <th scope="col">Kayıt Tarihi</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody class="table-success">
                    <% allUserList.forEach((item,index) => { %>
                        <tr>
                            <form action="home/usermanagement/deleted" method="post">
                                <th scope="row"><%= index+1  %></th>
                                <td hidden>
                                    <input type="text" class="form-control" id="objID" name="objID" value="<%= item._id %>" required readonly>
                                </td>
                                <td>
                                    <input type="text" class="form-control" id="name" name="name" value="<%= item.name %>" required readonly>
                                </td>
                                <td>
                                    <input type="text" class="form-control" id="password" name="password" value="<%= item.password %>" required readonly>
                                </td>
                                <td>
                                    <input type="text" class="form-control" id="role" name="role" value="<%= item.role %>" required readonly>
                                </td>
                                <td>
                                    <input type="text" class="form-control" id="registeredDate" name="registeredDate" value="<%= item.registeredDate %>" required readonly>
                                </td>
                                <td>
                                    <input class="btn btn-danger" type="submit" class="form-control" id="delete" name="delete" value="KULLANICIYI SİL">
                                </td>
                            </form>
                        </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
</body>
</html>